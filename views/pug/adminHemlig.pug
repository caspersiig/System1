    body
        div(id="real-body")
            h1= "Velkommen til admin siden: "+navn
            h2= "Tilføj en madvogn"
            form(action='/addMadvogn', method='POST')
                p
                    |   Madvogne navn (bare så du kan kende madvogen): 
                    input(type='text', name='madvogn', value='')
